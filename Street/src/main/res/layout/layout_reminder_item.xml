<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgbtn_remove_reminder"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tx_remind_me"
        android:text="Remind me to ~ "
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tx_remind_task"
        android:textSize="25dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_toRightOf="@+id/tx_remind_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tx_remind_place1"
        android:text="When I'm @ "
        android:layout_below="@+id/tx_remind_me"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tx_remind_place2"
        android:textSize="25dp"
        android:layout_below="@+id/tx_remind_me"
        android:layout_margin="@dimen/fab_margin"
        android:layout_toRightOf="@+id/tx_remind_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>